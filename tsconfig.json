{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "target": "ESNEXT",
    "jsx": "react",
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
      "./src/**/*"
    ]
  }
}
